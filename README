-- Creación de la base de datos
CREATE DATABASE IF NOT EXISTS EduExpedientes;
USE EduExpedientes;

-- Creación de la tabla Maternal
CREATE TABLE IF NOT EXISTS Maternal (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(255) NOT NULL,
    apellido_paterno VARCHAR(255) NOT NULL,
    apellido_materno VARCHAR(255),
    edad INT NOT NULL,
    curp_documento VARCHAR(255) NOT NULL,
    certificado_medico VARCHAR(255) NOT NULL,
    fotografia VARCHAR(255) NOT NULL,
    tutor_nombre VARCHAR(255),
    tutor_apellido_paterno VARCHAR(255),
    tutor_apellido_materno VARCHAR(255),
    tutor_curp VARCHAR(255),
    tutor_telefono VARCHAR(20),
    direccion TEXT,
    activo BOOLEAN NOT NULL DEFAULT TRUE
);

-- Creación de la tabla Preescolar
CREATE TABLE IF NOT EXISTS Preescolar (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(255) NOT NULL,
    apellido_paterno VARCHAR(255) NOT NULL,
    apellido_materno VARCHAR(255),
    edad INT NOT NULL,
    curp_documento VARCHAR(255) NOT NULL,
    certificado_medico VARCHAR(255) NOT NULL,
    fotografia VARCHAR(255) NOT NULL,
    tutor_nombre VARCHAR(255),
    tutor_apellido_paterno VARCHAR(255),
    tutor_apellido_materno VARCHAR(255),
    tutor_curp VARCHAR(255),
    tutor_telefono VARCHAR(20),
    direccion TEXT,
    activo BOOLEAN NOT NULL DEFAULT TRUE
);

-- Creación de la tabla Profesores
CREATE TABLE IF NOT EXISTS Profesores (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(255) NOT NULL,
    apellido_paterno VARCHAR(255) NOT NULL,
    apellido_materno VARCHAR(255),
    edad INT NOT NULL,
    curp_documento VARCHAR(255) NOT NULL,
    direccion TEXT NOT NULL,
    telefono VARCHAR(20) NOT NULL,
    acta_nacimiento VARCHAR(255) NOT NULL,
    certificado_medico VARCHAR(255) NOT NULL,
    fotografia VARCHAR(255) NOT NULL,
    username VARCHAR(255) NOT NULL,
    password_hash VARCHAR(255) NOT NULL,
    activo BOOLEAN NOT NULL DEFAULT TRUE
);

-- Creación de la tabla Usuarios
CREATE TABLE IF NOT EXISTS Usuarios (
    id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(255) NOT NULL,
    password_hash VARCHAR(255) NOT NULL,
    tipo ENUM('Administrador', 'Personal') NOT NULL,
    activo BOOLEAN NOT NULL DEFAULT TRUE
);